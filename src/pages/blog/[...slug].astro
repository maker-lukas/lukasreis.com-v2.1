---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";

export async function getStaticPaths() {
  const posts = await getCollection("blog");
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: post,
  }));
}

const post = Astro.props;
const { Content } = await post.render();

const formattedDate = post.data.date.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<Layout title={`lukas/blog/${post.slug}`}>
    <div class="page">
      <div class="heading">
        <h2>{post.data.title}</h2>
        <time datetime={post.data.date.toISOString()}>{formattedDate}</time>
        {post.data.tags && post.data.tags.length > 0 && (
          <div class="tags">
            {post.data.tags.map((tag: string) => (
              <span class="tag">{tag}</span>
            ))}
          </div>
        )}
      </div>
      <hr>
      <div class="content">
        <Content />
      </div>
      
    </div>
</Layout>

<style>

  .page {
    padding-block: 50px;
  }

  hr {
    border: none;
    border-top: 3px solid var(--purple);
    margin: 2em 0;
  }

  .back-link {
    display: inline-block;
    margin-bottom: 2ch;
    opacity: 0.8;
  }

  .back-link:hover {
    opacity: 1;
  }

  h2 {
    margin: 0 0 0.5ch;
  }

  time {
    opacity: 0.7;
    font-size: 14px;
  }

  .tags {
    display: flex;
    gap: 8px;
    margin-top: 1ch;
    flex-wrap: wrap;
  }

  .tag {
    background: var(--purple);
    padding: 2px 8px;
    border-radius: 4px;
    font-size: 12px;
  }

  .content {
    line-height: 1.7;
  }

  .content :global(h1) {
    font-size: 2em;
    margin: .67em 0;
  }

  .content :global(h2) {
    font-size: 1.5em;
    margin: .75em 0;
  }

  .content :global(h3) {
    font-size: 1.17em;
    margin: .83em 0;
  }

  .content :global(h4),
  .content :global(p),
  .content :global(blockquote),
  .content :global(ul),
  .content :global(ol),
  .content :global(dl),
  .content :global(fieldset),
  .content :global(form),
  .content :global(menu) {
    margin: 1.12em 0;
  }

  .content :global(h5) {
    font-size: .83em;
    margin: 1.5em 0;
  }

  .content :global(h6) {
    font-size: .75em;
    margin: 1.67em 0;
  }

  .content :global(ul) {
    padding-left: 2ch;
  }

  .content :global(ol) {
    list-style-position: inside;
  }

  .content :global(code) {
    background: var(--background-color);
    padding: 2px 6px;
    border-radius: 4px;
    font-size: 14px;
    border: 2px solid var(--purple);
  }

  .content :global(pre) {
    position: relative;
    background: var(--background-color) !important;
    padding: 1ch;
    border-radius: 8px;
    overflow-x: auto;
    margin-bottom: 1.5ch;
    border: 3px solid var(--purple);
  }

  .content :global(.code-wrapper) {
    position: relative;
  }

  .content :global(.copy-btn) {
    position: absolute;
    top: 8px;
    right: 8px;
    z-index: 1;
    background: var(--purple);
    border: none;
    border-radius: 4px;
    padding: 4px 8px;
    cursor: pointer;
    font-size: 12px;
    color: white;
    transition: opacity 0.2s;
  }

  .content :global(.copy-btn:hover) {
    background: var(--light-purple);
  }

  .content :global(pre code) {
    background: none;
    padding: 0;
    border: none;
  }

  .content :global(hr) {
    border: none;
    border-top: 3px solid var(--purple);
    margin: 2em 0;
  }

  .content :global(.warning) {
    color: var(--yellow);
  }

  .content :global(blockquote) {
    background: var(--background-color);
    border-left: 3px solid var(--purple);
    padding-left: 1.5ch;
    margin-left: 0;
    font-style: italic;
  }

  .content :global(img) {
    border-radius: 10px;
    max-width: min(750px, 100%);
    height: auto;
  }

  .content :global(.link) {
    text-decoration: underline;
  }

  .content :global(.link:hover) {
    text-decoration: none;
  }
</style>

<script>
document.querySelectorAll('pre').forEach((pre) => {
  const meta = pre.dataset.meta || '';
  if (!meta.includes('copy')) return;

  const code = pre.querySelector('code');
  const lang = pre.getAttribute('data-language');
  
  const wrapper = document.createElement('div');
  wrapper.className = 'code-wrapper';
  pre.parentNode?.insertBefore(wrapper, pre);
  wrapper.appendChild(pre);
  
  const btn = document.createElement('button');
  btn.className = 'copy-btn';
  btn.textContent = 'Copy';
  btn.addEventListener('click', async () => {
    let text = code?.textContent || pre.textContent || '';
    if (lang === 'jsonc') {
      text = text
        .replace(/\/\/.*$/gm, '')
        .replace(/\/\*[\s\S]*?\*\//g, '')
        .replace(/^\s*\n/gm, '')
        .trim();
    }
    await navigator.clipboard.writeText(text);
    btn.textContent = 'copied';
    setTimeout(() => btn.textContent = 'Copy', 2000);
  });
  wrapper.appendChild(btn);
});
</script>
