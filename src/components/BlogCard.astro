---
interface Props {
  title: string;
  description: string;
  date: Date;
  slug: string;
  tags?: string[];
}
const { title, description, date, slug, tags } = Astro.props;

const formattedDate = date.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'short',
  day: 'numeric',
});
---

<a href={`/blog/${slug}`} class="blog-post">
  <div class="header">
    <h4>{title}</h4>
    <span class="date">{formattedDate}</span>
  </div>
  <p class="description">{description}</p>
  {tags && tags.length > 0 && (
    <div class="tags">
      {tags.map((tag) => (
        <span class="tag">{tag}</span>
      ))}
    </div>
  )}
</a>

<style>
  .blog-post {
    background: var(--dark-purple);
    border-radius: 10px;
    padding: 1.5ch;
    border: 3px solid var(--purple);
    cursor: pointer;
    transition: border-color 0.2s ease;
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .blog-post:hover {
    border-color: #9b7bc4;
  }

  .header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.5ch;
  }

  h4 {
    margin: 0;
  }

  .date {
    font-size: 14px;
    color: #D9D5DE;
  }

  .description {
    margin: 0;
    color: #D9D5DE;
    font-size: 14px;
  }

  .tags {
    display: flex;
    gap: 8px;
    margin-top: 1ch;
    flex-wrap: wrap;
  }

  .tag {
    background: var(--purple);
    padding: 2px 8px;
    border-radius: 4px;
    font-size: 12px;
  }
</style>
