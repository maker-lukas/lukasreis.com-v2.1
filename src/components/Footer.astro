<footer>
    <a id="commit-link" href="https://github.com/maker-lukas/lukasreis.com-v2.1">
        <img src="/git-commit.svg" alt="commit" />
        <span id="commit-hash">loading...</span>
    </a>
    <p>Made by Lukas with &lt;3</p>
    <a href="https://github.com/maker-lukas">GitHub</a>
</footer>

<style>
    footer {
        font-size: 15px;
        margin-top: 10px;
        margin-bottom: 35px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    footer a:first-child {
        display: inline-flex;
        align-items: center;
        gap: 0.25rem;
    }

    footer a:first-child img {
        height: 1em;
        vertical-align: middle;
    }
</style>

<script>
    async function fetchCommit() {
        try {
            const res = await fetch('https://api.github.com/repos/maker-lukas/lukasreis.com-v2.1/commits?per_page=1');
            const data = await res.json();
            if (data[0]?.sha) {
                const hash = data[0].sha.slice(0, 7);
                document.getElementById('commit-hash')!.textContent = hash;
                document.getElementById('commit-link')!.setAttribute('href', 
                    `https://github.com/maker-lukas/lukasreis.com-v2.1/commit/${hash}`);
            }
        } catch (e) {
            document.getElementById('commit-hash')!.textContent = 'unknown';
        }
    }
    fetchCommit();
</script>